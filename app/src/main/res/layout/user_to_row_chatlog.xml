<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/message_textview_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/rounded_textview_chatlog"
        android:maxWidth="230dp"
        android:padding="14dp"
        android:text="Message Example"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/profileimage_imageview_to"
        app:layout_constraintTop_toTopOf="@+id/profileimage_imageview_to" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileimage_imageview_to"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/btn_star_big_on" />

    <TextView
        android:id="@+id/timestamp_textView_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Timestamp"
        android:textSize="13sp"
        app:layout_constraintBottom_toTopOf="@+id/message_textview_to"
        app:layout_constraintEnd_toStartOf="@+id/profileimage_imageview_to"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/username_textView_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Username"
        android:textStyle="bold"
        android:textColor="@color/grey"
        app:layout_constraintBottom_toBottomOf="@+id/timestamp_textView_to"
        app:layout_constraintEnd_toStartOf="@+id/timestamp_textView_to"
        app:layout_constraintTop_toTopOf="@+id/timestamp_textView_to" />
</androidx.constraintlayout.widget.ConstraintLayout>