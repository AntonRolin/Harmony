<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/message_textview_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_textview_chatlog"
        android:maxWidth="230dp"
        android:padding="14dp"
        android:text="Message Example xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/profileimage_imageview_from"
        app:layout_constraintTop_toTopOf="@+id/profileimage_imageview_from" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileimage_imageview_from"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/star_big_on" />

    <TextView
        android:id="@+id/username_textView_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textStyle="bold"
        android:textColor="@color/grey"
        app:layout_constraintBottom_toTopOf="@+id/message_textview_from"
        app:layout_constraintStart_toEndOf="@+id/profileimage_imageview_from"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/timestamp_textView_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Timestamp"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/username_textView_from"
        app:layout_constraintStart_toEndOf="@+id/username_textView_from"
        app:layout_constraintTop_toTopOf="@+id/username_textView_from" />

</androidx.constraintlayout.widget.ConstraintLayout>